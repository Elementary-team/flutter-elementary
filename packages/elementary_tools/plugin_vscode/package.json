{
	"name": "elementary",
	"displayName": "Elementary",
	"description": "Extension for better experience with Elementary",
	"version": "0.1.0",
	"publisher": "ElementaryTeam",
	"repository": {
		"url": "git://github.com/Elementary-team/flutter-elementary.git",
		"type": "git",
		"directory": "packages/elementary_tools/plugin_vscode"
	},
	"icon": "assets/logo.png",
	"categories": [
		"Snippets",
		"Other"
	],
	"keywords": [
		"elementary",
		"dart",
		"flutter",
		"mvvm",
		"state-management"
	],
	"engines": {
		"vscode": "^1.96.0"
	},
	"extensionKind": [
		"workspace"
	],
	"activationEvents": [
		"workspaceContains:pubspec.yaml"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "elementary.generate.module",
				"title": "Elementary: Generate Module"
			},
			{
				"command": "elementary.generate.test.wm",
				"title": "Generate Test For Widget Model"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "elementary.generate.module",
					"when": "1 === 2"
				},
				{
					"command": "elementary.generate.test.wm",
					"when": "1 === 2"
				}
			],
			"explorer/context": [
				{
					"when": "dart-code:anyFlutterProjectLoaded && !listMultiSelection && explorerResourceIsFolder",
					"command": "elementary.generate.module"
				},
				{
					"when": "dart-code:anyFlutterProjectLoaded && !listMultiSelection && resourceFilename =~ /_wm.dart$/",
					"command": "elementary.generate.test.wm"
				}
			]
		},
		"snippets": [
			{
				"language": "dart",
				"path": "./snippets/elementary.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"extensionDependencies": [
		"Dart-Code.flutter",
		"Dart-Code.dart-code"
	],
	"devDependencies": {
		"@types/mocha": "^10.0.10",
		"@types/node": "24.x",
		"@types/semver": "^7.7.0",
		"@types/vscode": "^1.96.0",
		"@typescript-eslint/eslint-plugin": "^8.25.0",
		"@typescript-eslint/parser": "^8.25.0",
		"@vscode/test-cli": "^0.0.10",
		"@vscode/test-electron": "^2.4.1",
		"dart-code": "github:Dart-Code/Dart-Code",
		"eslint": "^9.21.0",
		"mocha": "^11.1.0",
		"typescript": "^5.7.3"
	},
	"dependencies": {
		"semver": "^7.7.2"
	}
}